            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="	Valor R$200.000,00 	Quartos:3 	Banheiros:2 	Garagem:1" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>